<!DOCTYPE html>
<html lang="zxx">
  <%- include('../partials/head') %>

  <body>
    <!-- Page Preloder -->
    <%- include('../partials/preloader') %>

    <!-- Header Section Begin -->
    <%- include('../partials/header') %>
    <!-- Header End -->

    <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="bo-links">
              <a href="/"><i class="fa fa-home"></i> Inicio</a>
              <span>Nuevo Álbum</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Blog Section Begin -->
    <section class="blog-section spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-9">
            <form
              action="/api/album"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="row">
                <div class="col-12">
                  <h5 class="h5-custom">Nuevo Álbum</h5>
                </div>
                <div class="col-8">
                    <input class="input-album" type="text" name="alias" placeholder="Alias ">
                </div>
                <div class="col-4">
                    <input class="input-album" type="text" name="formato" placeholder="Formato">
                </div>
                <div class="col-8 cuadro-mediano">
                  <img
                    id="frame1"
                    src="https://imgv3.fotor.com/images/homepage-feature-card/Upload-an-image.jpg"
                    class="imagen-mediana"
                  />
                  <div class="image-upload input-mediano">
                    <label for="file-input" class="label-mediano"> </label>
                    <input
                      id="file-input"
                      name="file_input1"
                      type="file"
                      onchange="preview('frame1')"
                    />
                  </div>
                </div>
                <div class="col-4">
                  <div class="row">
                    <div class="col-sm-12 cuadro-small">
                      <img
                        id="frame2"
                        src="https://imgv3.fotor.com/images/homepage-feature-card/Upload-an-image.jpg"
                        class="image-small"
                      />
                      <div class="image-upload input-small">
                        <label for="file-input2" class="label-small"> </label>
                        <input
                          id="file-input2"
                          name="file_input2"
                          type="file"
                          onchange="preview('frame2')"
                        />
                      </div>
                    </div>
                    <div class="col-sm-12" style="height: 10px"></div>
                    <div class="col-sm-12 cuadro-small">
                      <img
                        id="frame3"
                        src="https://imgv3.fotor.com/images/homepage-feature-card/Upload-an-image.jpg"
                        class="image-small"
                      />
                      <div class="image-upload input-small">
                        <label for="file-input3" class="label-small"> </label>
                        <input
                          id="file-input3"
                          name="file_input3"
                          type="file"
                          onchange="preview('frame3')"
                        />
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="col-12">
                  <button style="width: 100%;margin-top: 1rem;" type="submit" class="site-btn">Submit</button>
                </div>
              </div>
            </form>
          </div>
          <div class="col-lg-3">
            <div class="blog-sidebar">
              <div class="bs-item s-mb">
                <h5>Diseños</h5>
                <div class="bi-feature-post">
                  <a href="#" class="fp-item">
                    <div class="fp-pic">
                      <img src="img/blog/fp-1.jpg" alt="" />
                    </div>
                    <div class="fp-text">
                      <h6>Foto Grande</h6>
                    </div>
                  </a>
                  <a href="#" class="fp-item">
                    <div class="fp-pic">
                      <img src="img/blog/fp-2.jpg" alt="" />
                    </div>
                    <div class="fp-text">
                      <h6>1 Foto mediana con 2 Pequeñas</h6>
                    </div>
                  </a>
                  <a href="#" class="fp-item">
                    <div class="fp-pic">
                      <img src="img/blog/fp-3.jpg" alt="" />
                    </div>
                    <div class="fp-text">
                      <h6>1 Foto mediana con 3 Pequeñas</h6>
                    </div>
                  </a>
                  <a href="#" class="fp-item">
                    <div class="fp-pic">
                      <img src="img/blog/fp-4.jpg" alt="" />
                    </div>
                    <div class="fp-text">
                      <h6>2 Fotos medianas</h6>
                    </div>
                  </a>
                  <a href="#" class="fp-item">
                    <div class="fp-pic">
                      <img src="img/blog/fp-5.jpg" alt="" />
                    </div>
                    <div class="fp-text">
                      <h6>Know Before You Go: Guide to Disney...</h6>
                      <span>Aug,15, 2019</span>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Blog Section End -->

    <!-- Footer Section Begin -->
    <%- include('../partials/footer') %>
    <!-- Footer Section End -->

    <!-- Search model Begin -->
    <div class="search-model">
      <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="search-close-switch">+</div>
        <form class="search-model-form">
          <input type="text" id="search-input" placeholder="Search here....." />
        </form>
      </div>
    </div>
    <!-- Search model end -->

    <!-- Js Plugins -->
    <%- include('../partials/scripts') %>
  </body>
</html>
